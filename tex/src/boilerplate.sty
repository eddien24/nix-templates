% Math Packages
\RequirePackage{amsmath, amssymb, amsfonts, cancel}

% Problem define
\newcounter{probnum}
\setcounter{probnum}{1}
\newcommand{\problem}{
    \ifnum\value{probnum}=1\else\clearpage\fi
    \section*{Problem \arabic{probnum}}
    \stepcounter{probnum}
}

% Better heading
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\lhead{\name}
\chead{\title}
\rhead{\date}

% No indenting in sections unless explicitly noted
\newlength\tindent
\setlength{\tindent}{\parindent}
\setlength{\parindent}{0pt}
\renewcommand{\indent}{\hspace*{\tindent}}

% Comment command 
\newcommand{\com}[1]{\text{(#1)}}

% Better defaults 
\renewcommand{\emptyset}{\varnothing}
\renewcommand{\bf}{\textbf}
\renewcommand{\it}{\textit}

% Note macros
\newcommand{\defn}{\textbf{Def:} }
\newcommand{\ex}{\textbf{Ex:} }

% Nice shortcuts
\renewcommand{\(}{\left(}
\renewcommand{\)}{\right)}
\newcommand{\<}{\langle}
\renewcommand{\>}{\rangle}
\newcommand{\qed}{\hfill $\square$}

% Functions
\DeclareMathOperator{\var}{Var}
\DeclareMathOperator{\im}{Im}
\DeclareMathOperator{\lcm}{lcm}

\newcommand{\E}{\mathbb{E}}
\newcommand{\N}{\mathbb{N}}
\renewcommand{\P}{\mathbb{P}}
\newcommand{\PP}{{\mathcal{P}}}
\newcommand{\Q}{\mathbb{Q}}
\newcommand{\QQ}{\mathcal{Q}}
\newcommand{\R}{\mathbb{R}}
\newcommand{\Z}{\mathbb{Z}}
